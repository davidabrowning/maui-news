<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNews.MobileApp.Pages.DetailPage"
             Title="ArticleDetailPage">
    <VerticalStackLayout>
        <Image
                Source="{Binding Path=ArticleUrlToImage}"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="article image fetched from api" />

        <Label 
            Text="{Binding Path=ArticleTitle}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="24" />

        <Label 
            Text="{Binding Path=ArticleContent}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="16" />
    </VerticalStackLayout>
</ContentPage>