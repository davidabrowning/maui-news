<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNews.MobileApp.Pages.DetailPage"
             Title="ArticleDetailPage">
    <VerticalStackLayout>
        <Image
            Source="{Binding Path=ArticleUrlToImage}"
            WidthRequest="600"
            Aspect="AspectFit"
            SemanticProperties.Description="article image fetched from api"
            Margin="10" />

        <Label 
            Text="{Binding Path=ArticleSourceName}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            WidthRequest="600"
            FontSize="12"
            Margin="10" />

        <Label 
            Text="{Binding Path=ArticleTitle}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            WidthRequest="600"
            FontSize="24"
            Margin="10" />

        <Label 
            Text="{Binding Path=ArticleContent}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            WidthRequest="600"
            FontSize="16"
            Margin="10" />
    </VerticalStackLayout>
</ContentPage>