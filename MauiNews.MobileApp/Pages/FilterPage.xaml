<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiNews.MobileApp.Pages.FilterPage"
             Title="Dave's MAUI News">
    <VerticalStackLayout>
        <Label
            Text="Choose a topic:"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

        <Button
            Text="{Binding Path=SearchTermA}"
            Clicked="FilterButton_Clicked"
            Margin="15"
            WidthRequest="400"
            />

        <Button
            Text="{Binding Path=SearchTermB}"
            Clicked="FilterButton_Clicked"
            Margin="15"
            WidthRequest="400"
            />

        <Button
            Text="{Binding Path=SearchTermC}"
            Clicked="FilterButton_Clicked"
            Margin="15"
            WidthRequest="400"
            />
    </VerticalStackLayout>
</ContentPage>